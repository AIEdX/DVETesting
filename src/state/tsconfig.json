{
  "references": [
    { "path": "../core" },
    { "path": "../screen" },
    { "path": "../io" },
    { "path": "../commands" },
    { "path": "../audio" },
    { "path": "../databases" },
    { "path": "../client" },
    { "path": "../assets" },
  ],

  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "../",
    "rootDirs": [],
    "composite": true,
    "types": [  "crystalline-state"],
    "outDir": "../../compiled/raw/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "",
    "paths": {
      "@data/*": ["../core/data/*"],
      "@core/*": ["../core/*"],
      "@client/*": ["../client/*"],
      "@screen/*": ["../screen/*"],
      "@audio/*": ["../audio/*"],
      "@io/*": ["../io/*"],
      "@commands/*": ["../commands/*"],
      "@databases/*": ["../databases/*"],
      "@assets/*": ["../assets/*"],
      "@csm/*": ["./client/Machines/*"],
    },

    "plugins": [{ "transform": "typescript-transform-paths" }],
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
